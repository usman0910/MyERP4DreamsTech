@model ERP.ViewModels.EmployeeVM
@{
    ViewBag.Title = "EditEmployee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("New", "Employee", FormMethod.Post, new { @class = "main-content form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Add New Employee</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">

                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Employee</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Name</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(p => p.Employee.FullName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label class="col-sm-4 control-label">Birth Date</label>
                                    <div class="col-sm-8">
                                        @Html.EditorFor(emp => emp.Employee.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">

                                <label class="col-md-4 control-label">City</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(p => p.Employee.City, new { @class = "form-control" })
                                </div>

                            </div>
                            <div class="col-md-6">


                                <label class="col-md-4 control-label">Permanent Address</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(p => p.Employee.PermanentAddress, new { @class = "form-control" })
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Contact Number</label>
                                    <div class="col-md-8">
                                        
                                        @Html.TextBoxFor(p => p.Employee.ContactNumber, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label class="col-sm-4 control-label">Joining Date</label>
                                    <div class="col-sm-8">
                                        @Html.EditorFor(emp => emp.Employee.JoiningDate, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">

                                <label class="col-md-4 control-label">Designation</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(c => c.Employee.DesignationId, new SelectList(Model.Designations, "Id", "Designation"), "Select Designation", new { @class = "form-control" })
                                </div>

                            </div>
                            <div class="col-md-6">


                                <label class="col-md-4 control-label">CNIC</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(p => p.Employee.CNIC, new { @class = "form-control" })
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Basic Salary</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(p => p.Employee.BasicSalary, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-6">
                            <div style="text-align:center; margin-top:15px;">
                                @Html.ActionLink("Back to List", "AllEmployees", "Employee", null, new { @class = "btn btn-primary" })
                                <button type="submit" style="background-color:forestgreen" class="btn btn-primary">Update Record</button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    @Html.HiddenFor(e => e.Employee.Id);
}


<script>

    $(document).ready(function () {


        $(".select2").select2();
        $(".select2-placeholer").select2({
            allowClear: true
        });

    });

</script>

