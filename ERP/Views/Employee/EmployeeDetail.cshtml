@model ERP.Models.Employee
@{
    ViewBag.Title = "EmployeeDetail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("", "", FormMethod.Get, new { @class = "main-content form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Add New Employee</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">

                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Employee</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Name</label>
                                    <div class="col-md-8">
                                        <label style="font-weight:400;" class="control-label">@Model.FullName</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label class="col-sm-4 control-label">Birth Date</label>
                                    <div class="col-sm-8">
                                        <label style="font-weight:400;" class="control-label">@Model.BirthDate</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">

                                <label class="col-md-4 control-label">City</label>
                                <div class="col-md-8">
                                    <label style="font-weight:400;" class="control-label">@Model.City</label>
                                </div>

                            </div>
                            <div class="col-md-6">


                                <label class="col-md-4 control-label">Permanent Address</label>
                                <div class="col-md-8">
                                    <label style="font-weight:400; text-align:left" class="control-label">@Model.PermanentAddress</label>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Contact Number</label>
                                    <div class="col-md-8">
                                        <label style="font-weight:400;" class="control-label">@Model.ContactNumber</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label class="col-sm-4 control-label">Joining Date</label>
                                    <div class="col-sm-8">
                                        <label style="font-weight:400;" class="control-label">@Model.JoiningDate</label>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">

                                <label class="col-md-4 control-label">Designation</label>
                                <div class="col-md-8">
                                    <label style="font-weight:400;" class="control-label">@Model.Designations.Designation</label>
                                </div>

                            </div>
                            <div class="col-md-6">


                                <label class="col-md-4 control-label">CNIC</label>
                                <div class="col-md-8">
                                    <label style="font-weight:400;" class="control-label">@Model.CNIC</label>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Basic Salary</label>
                                    <div class="col-md-8">
                                        <label style="font-weight:400;" class="control-label">@Model.BasicSalary</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div style="text-align:center; margin-top:15px;">
                        @Html.ActionLink("Back To List","AllEmployees","Employee",null,new {@class="btn btn-primary" })
                    </div>

                </div>
            </div>
        </div>
    </div>


}


<script>

    $(document).ready(function () {


        $(".select2").select2();
        $(".select2-placeholer").select2({
            allowClear: true
        });

    });

</script>

