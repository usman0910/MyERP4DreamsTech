
@{
    ViewBag.Title = "YearlyBillingHistory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Yearly Billing Projects</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <table id="projects" class="table table-bordered table-responsive table-hover table-striped">

                    <thead>
                        <tr>
                            <td>
                                From
                            </td>
                            <td>
                                To
                            </td>
                            <td>
                                Status
                            </td>
                            <td>
                                Change Status
                            </td>
                        </tr>
                    </thead>

                </table>


            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var ProId = location.pathname.split("/").pop();
        $("#projects").DataTable({
            ajax: {
                url: "/api/YearlyBillingHistory/" + ProId,
                dataSrc: ""
            },
            columns: [

                {
                    data: "From",
                    render: function (data, type, Wholedata) {
                        var date = new Date(data).toDateString();
                        return date;
                    }
                },
                {
                    data: "To",
                    render: function (data, type, Wholedata) {
                        var date = new Date(data).toDateString();
                        return date;
                    }
                },
                {
                    data: "BillingStatus.Status",
                    render: function (data, type, Wholedata) {
                        if (data == "Not Paid") {
                            return "<label class='alert-warning' style='color:red'>" + data + "</label>";
                        }
                        else {
                            return "<label style='color:green'>" + data + "</label>";
                        }
                    }
                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {
                        return "<a class='btn btn-primary' href='/billing/ChangeYearlyBillingStatus/" + data + "'>Update Status</a>";
                    }
                }
            ]
        });
    });
</script>