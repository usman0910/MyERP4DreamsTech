
@{
    ViewBag.Title = "BillingMonthlyProjects";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Monthly Billing Projects</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <table id="projects" class="table table-bordered table-responsive table-hover table-striped">

                    <thead>
                        <tr>
                            <td>
                                Client
                            </td>
                            <td>
                                Project Name
                            </td>
                            <td>
                                View Monthly Bill Details
                            </td>
                        </tr>
                    </thead>

                </table>


            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
         $("#projects").DataTable({
            ajax: {
                url: "/api/BillingMonthlyProjects/",
                dataSrc: ""
            },
            columns: [
                {
                    data: "Client.CompanyName"
                },
                {
                    data: "Name"
                },
                {
                    data:"Id",
                    render: function (data, type, Wholedata) {
                        return "<a class='btn btn-primary' href='/Billing/MonthlyBillingHistory/" + data + "'>Monthly Details</a>";
                    }
                }
            ]
        });
    });
</script>