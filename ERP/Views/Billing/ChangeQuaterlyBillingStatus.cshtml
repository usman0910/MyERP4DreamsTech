
@{
    ViewBag.Title = "ChangeQuaterlyBillingStatus";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div ng-app="TestApp" ng-controller="AppCtrl" class="main-content form-horizontal" role="form">



    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Update Status</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <br />

                <div class="panel-body">
                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Change Quaterly Payment Status</label>
                        </div>
                    </div>

                    <br />

                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <label class="col-md-4 control-label">Billing Status</label>
                            <div class="col-md-8">
                                <select id="Select_StatusType" class="form-control">
                                    <option value="default" selected>Select Status</option>
                                    <option ng-repeat="status in billingStatus" value="{{status.Id}}">{{status.Status}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <br />
                    <br />
                    <div class="row" style="text-align:center">
                        <button ng-click="sendData()" class="btn btn-primary" type="submit">UpDate Status</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<script>

    var AppMode = angular.module("TestApp", []);


    AppMode.controller("AppCtrl", function ($scope, $http) {

        $scope.ProId = location.pathname.split("/").pop();

        $http({
            url: 'http://localhost:64751/api/BillingStatus/',
            method: 'GET'

        }).then(function (resp) {
            var Data = resp.data;
            $scope.billingStatus = Data;

        });

        $scope.sendData = function () {


            $http({
                url: 'http://localhost:64751/api/BillingQuaterlyProjects/UpdateStatus',
                method: 'POST',
                data: {

                    Id: $scope.ProId,
                    BillingStatusId: $("#Select_StatusType").val(),

                }

            }).then(function (resp) {

                toastr.success("Status UpDated");
                window.location.href = '/billing/billingquaterlyprojects/';
            }, function () {
                toastr.error("There is some problen due to which Status is not Updated try back again. -ThankYou");

            });

        };


    });
</script>

