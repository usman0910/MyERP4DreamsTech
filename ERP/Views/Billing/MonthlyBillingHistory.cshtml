
@{
    ViewBag.Title = "MonthlyBillingHistory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Monthly Billing Projects</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <table id="projects" class="table table-bordered table-responsive table-hover table-striped">

                    <thead>
                        <tr>
                            <td>
                                From
                            </td>
                            <td>
                                To
                            </td>
                            <td>
                                Monthly Amount
                            </td>
                            <td>
                                Arrears
                            </td>
                            <td>
                                Total Amount
                            </td>
                            <td>
                                Tax
                            </td>
                            <td>
                                Amount Paid
                            </td>
                            <td>
                                Total Remaining Arrears
                            </td>
                            <td>
                                Update
                            </td>
                            <td>
                                History
                            </td>

                        </tr>
                    </thead>

                </table>


            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var ProId = location.pathname.split("/").pop();
        $("#projects").DataTable({
            ajax: {
                url: "/api/MonthlyBillingHistory/" + ProId,
                dataSrc: ""
            },
            columns: [

                {
                    data: "From",
                    render: function (data, type, Wholedata) {
                        var date = new Date(data).toDateString();
                        return date;
                    }
                },
                {
                    data: "To",
                    render: function (data, type, Wholedata) {
                        var date = new Date(data).toDateString();
                        return date;
                    }
                },
                {
                    data: "MonthlyAmount" //MonthlyBill
                },
                {
                    data: "Arrears"  //PreviousArrears
                },
                {
                    data: "TotalAmountToPay" //TotalAmount
                },
                {
                    data: "Tax" //Tax
                },
                {
                    data: "AmountPaid"  //MonthyPaid
                },
                {
                    data: "RemainingArrears" //ArrearsRemaining

                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {
                        if (Wholedata.Editable == false) {
                            return "N/A";

                        } else {
                            return "<a class='btn btn-primary' href='/billing/ChangeMonthlyBillingStatus/" + data + "'>Update</a>";

                        }
                    }
                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {

                        return "<a class='btn btn-primary' href='/billing/MonthlyHistoryDetails/" + data + "'>Details</a>";


                    }
                }
            ]
        });
    });
</script>