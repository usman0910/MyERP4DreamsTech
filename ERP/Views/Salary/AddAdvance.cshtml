@model ERP.ViewModels.AdvanceSalaryVM
@{
    ViewBag.Title = "AddAdvance";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddAdvance", "Salary", FormMethod.Post, new { @class = "main-content form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Add Advance</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="textbox-margintop">
                            <label class="col-md-2 control-label">Employee</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(c => c.AdvanceSalary.EmployeeId, new SelectList(Model.Employees, "Id", "FullName"), "Select Employee", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <label class="col-md-2 control-label">Given Date</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(p => p.AdvanceSalary.GivenDate, "{0:dd/MM/yyyy}", new { @class = "form-control", @type = "date" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="textbox-margintop">
                            <label class="col-md-2 control-label">Advance Amount</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(p => p.AdvanceSalary.AdvanceAmount, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="textbox-margintop">
                            <label class="col-md-2 control-label">Reason</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(p => p.AdvanceSalary.Reason, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div style="text-align:center; margin-top:15px;">
                        <button type="submit" class="btn btn-primary">Save Record</button>
                    </div>

                </div>
            </div>
        </div>
    </div>


}

