
@{
    ViewBag.Title = "PreviousComplaints";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Projects</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <table id="complaints" class="table table-bordered table-responsive table-hover table-striped">

                    <thead>
                        <tr>
                            <td>
                                Project Name
                            </td>
                            <td>
                                Complaint Date
                            </td>
                            <td>
                                Complaint Entertained Date
                            </td>
                            <td>
                                Resolved By
                            </td>
                            <td>
                                Details
                            </td>
                        </tr>
                    </thead>

                </table>


            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#complaints").DataTable({
            ajax: {
                url: "/api/PreviousComplaints/",
                dataSrc: ""
            },
            columns: [

                {
                    data: "Project.Name"
                },
                {

                    data: "ComplaintDate",
                    render: function (data, type, Wholedata) {
                        var date = new Date(data).toDateString();
                        return date;
                    }

                },
                {
                    data: "ComplaintEntertainedDate",
                    render: function (data, type, Wholedata) {
                        var date = new Date(data).toDateString();
                        return date;
                    }
                },
                {
                    data: "Employee.FullName"
                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {
                        return "<a class='btn btn-primary' href='/ComplaintManagement/ComplaintDetails/" + data + "'>Details</a>";
                    }
                }
            ]
        });
    });
</script>

