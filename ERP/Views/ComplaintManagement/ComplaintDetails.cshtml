
@{
    ViewBag.Title = "ComplaintDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div ng-app="myApp" ng-controller="myCtrl" class="main-content form-horizontal" role="form">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Complaint Details</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">

                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Complaint Details</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Project Name</label>
                                    <div class="col-md-8">
                                        <label style="font-weight:400;" class="control-label">{{complaint.Project.Name}}</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label class="col-sm-4 control-label">Visited By</label>
                                    <div class="col-sm-8">
                                        <label style="font-weight:400;" class="control-label">{{complaint.Employee.FullName}}</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">

                                <label class="col-md-4 control-label">Complaint Date</label>
                                <div class="col-sm-8">
                                    <label style="font-weight:400;" class="control-label">{{complaintDate}}</label>
                                </div>

                            </div>
                            <div class="col-md-6">
                                    <label class="col-md-4 control-label">Resolved Date</label>
                                    <div class="col-sm-8">
                                        <label style="font-weight:400;" class="control-label">{{complaintEntertainedDate}}</label>
                                    </div>
                            </div>

                        </div>

                    </div>

                    <div class="row">
                        <div class="textbox-margintop">
                            <div class="col-md-6">
                                <div>
                                    <label class="col-md-4 control-label">Signal Strength Before</label>
                                    <div class="col-md-8">
                                        <label style="font-weight:400;" class="control-label">{{complaint.SignalStrengthBefore}}</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label class="col-sm-4 control-label">Signal Strength After</label>
                                    <div class="col-sm-8">
                                        <label style="font-weight:400;" class="control-label">{{complaint.SignalStrengthAfter}}</label>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-12">
                                <div class="col-md-4">

                                </div>
                                <div class="row4saperator col-md-4">
                                    <div class="row">
                                        <label class="label4seperator">Issue Details</label>
                                    </div>
                                </div>
                                <div class="col-md-4">

                                </div>
                            </div>

                            <br />
                            <div class="col-md-12">
                                <div class="col-md-3">

                                </div>


                                <div style="text-align:center" class="col-md-6">
                                    <label style="font-weight:400; text-align:center" class="control-label">{{complaint.IssueDetails}}</label>
                                </div>
                                <div class="col-md-3">

                                </div>
                            </div>
                                

                        </div>
                    </div>

                    <div class="row">
                        <div class="textbox-margintop">

                            <div class="col-md-12">
                                <div class="col-md-4">

                                </div>
                                <div class="row4saperator col-md-4">
                                    <div class="row">
                                        <label class="label4seperator">Issue Resolved Details</label>
                                    </div>
                                </div>
                                <div class="col-md-4">

                                </div>
                            </div>
                           
                            <br />
                            <div class="col-md-12">
                                <div class="col-md-3">

                                </div>


                                <div style="text-align:center" class="col-md-6">
                                    <label style="font-weight:400; text-align:center" class="control-label">{{complaint.IssueResolvedDetails}}</label>
                                </div>
                                <div class="col-md-3">

                                </div>
                            </div>
                            

                        </div>
                    </div>

                   
                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Cable Stock Used</label>
                        </div>
                    </div>
                    <table id="stockCableOut" style="text-align:center" class="table table-bordered table-responsive table-hover table-striped">

                        <thead style="text-align:center">
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Used Feets
                                </th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="stockC in stockCableOuts">

                            <tr>
                                <td>
                                    {{stockC.CableRoll.Brand}}
                                </td>
                                <td>
                                    {{stockC.Totalfeets}}
                                </td>

                            </tr>
                        </tbody>
                    </table>


                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Equipment Stock Used</label>
                        </div>
                    </div>
                    <table id="stockEquiOut" style="text-align:center" class="table table-bordered table-responsive table-hover table-striped">

                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Brand
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    Quantity Used
                                </th>
                            </tr>
                        </thead>
                        <tbody ng-repeat="stockE in StockEquipmentOuts">
                            <tr>
                                <td>
                                    {{stockE.Equipment.Name}}
                                </td>
                                <td>
                                    {{stockE.Equipment.Brand}}
                                </td>
                                <td>
                                    {{stockE.EquipmentType.Type}}
                                </td>
                                <td>
                                    {{stockE.Quantity}}
                                </td>

                            </tr>
                        </tbody>
                    </table>


                    <div style="text-align:center; margin-top:15px;">
                        @Html.ActionLink("Back To List", "PreviousComplaints", "ComplaintManagement", null, new { @class = "btn btn-primary" })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




<script>
    var AppMod = angular.module("myApp", []);
    var proId = location.pathname.split("/").pop();
    AppMod.controller("myCtrl", function ($scope, $http) {



        $http({

            url: 'http://localhost:64751/api/ComplaintDetails/' + proId,
            method: 'GET'
        }).then(function (resp) {
            var Data = resp.data;
            $scope.complaint = Data.Complaint;
            $scope.complaintDate = new Date($scope.complaint.ComplaintDate).toDateString();
            $scope.complaintEntertainedDate = new Date($scope.complaint.ComplaintEntertainedDate).toDateString();
            $scope.stockCableOuts = Data.StockCablesOut;
            $scope.StockEquipmentOuts = Data.StockEquipmentsOut;

        });


    });
</script>