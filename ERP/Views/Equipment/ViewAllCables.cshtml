@model IEnumerable<ERP.Models.CableRoll>
@{
    ViewBag.Title = "ViewAllCables";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Cable Info</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">

                <table id="cablestock" class="table table-bordered table-responsive table-hover table-striped">

                    <thead>
                        <tr>
                            <td>
                                Brand
                            </td>
                            <td>
                                Per Feet Price
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cable in Model)
                        {

                            <tr>
                                <td>
                                    @cable.Brand
                                </td>
                                <td>
                                    @cable.FeetPrice
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#cablestock").DataTable();

    });
</script>