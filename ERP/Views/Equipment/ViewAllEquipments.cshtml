@model IEnumerable<ERP.Models.Equipment>
@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Equipment Info</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">

                <table id="cablestock" class="table table-bordered table-responsive table-hover table-striped">

                    <thead>
                        <tr>
                            <td>
                                Name
                            </td>
                            <td>
                                Brand
                            </td>
                            <td>
                                Unit Price
                            </td>
                            <td>
                                Edit
                            </td>
                            <td>
                                Delete
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var equip in Model)
                        {

                            <tr>
                                <td>
                                    @equip.Name
                                </td>
                                <td>
                                    @equip.Brand
                                </td>
                                <td>
                                    @equip.UnitPrice
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditEquipment", "Equipment", new { Id = equip.Id }, new { @class = "btn btn-default" })
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "DeleteEquipment", "Equipment", new { Id = equip.Id }, new { @class = "btn btn-default", @style = "color:red" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#cablestock").DataTable();

    });
</script>