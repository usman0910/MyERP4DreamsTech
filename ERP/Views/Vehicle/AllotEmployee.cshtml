@model ERP.ViewModels.AssignVehicleVm
@{
    ViewBag.Title = "AllotEmployee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AllotEmployee", "Vehicle", FormMethod.Post, new { @class = "main-content form-horizontal", role = "form" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Allot Vehicle</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="textbox-margintop">
                            <label class="col-md-2 control-label">To Employee</label>
                            
                            <div class="col-md-4">
                                @Html.DropDownListFor(c => c.AssignVehicle.EmployeeId, new SelectList(Model.Employees, "Id", "FullName"), "Select Employee", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="textbox-margintop">
                            <label class="col-md-2 control-label">Select Vehicle</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(c => c.AssignVehicle.VehicleRecordId, new SelectList(Model.Vehicles, "Id", "RegistrationNumber"), "Select Vehicle", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div style="text-align:center; margin-top:15px;">
                        <button type="submit" class="btn btn-primary">Allot</button>
                    </div>

                </div>
            </div>
        </div>
    </div>


}

