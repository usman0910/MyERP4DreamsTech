@model IEnumerable<ERP.Models.VehicleRecord>
@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Company Vehicles</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">

                <table id="vehicles" class="table table-bordered table-responsive table-hover table-striped">

                    <thead>
                        <tr>
                            <td>
                                Type
                            </td>
                            <td>
                                Registration No.
                            </td>
                            <td>
                                Status
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model)
                        {

                            <tr>
                                <td>
                                    @doc.VehicleType.Type
                                </td>
                                <td>
                                    @doc.RegistrationNumber
                                </td>


                                <td>
                                    @doc.VehicleStatus.Status
                                </td>



                            </tr>
                                    }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#vehicles").DataTable();

    });
</script>

