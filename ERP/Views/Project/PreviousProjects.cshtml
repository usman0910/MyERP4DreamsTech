
@{
    ViewBag.Title = "PreviousProjects";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title">Projects</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                    <table id="projects" class="table table-bordered table-responsive table-hover table-striped">

                        <thead>
                            <tr>
                                <td>
                                    Project Name
                                </td>
                                <td>
                                    Date
                                </td>
                                <td>
                                    Type
                                </td>
                                <td>
                                    View Details
                                </td>
                                <td>
                                    Edit Project
                                </td>
                            </tr>
                        </thead>

                    </table>
                

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
         $("#projects").DataTable({
            ajax: {
                url: "/api/PreviousProjects/",
                dataSrc: ""
            },
            columns: [

                {
                    data: "Name"
                },
                {
                    data: "StartingDate"
                    
                },
                {
                    data: "ProjectBillingType.Type"
                },
                {
                    data:"Id",
                    render: function (data, type, Wholedata) {
                        return "<a class='btn btn-primary' href='/project/ViewProjectDetails/" + data + "'>View Details</a>";
                    }
                },
                {
                    data: "Id",
                    render: function (data, type, Wholedata) {
                        return "<a class='btn btn-default' href='/project/EditProject/" + Wholedata.Id + "'>Edit</a>";
                    }
                }
            ]
        });
    });
</script>





