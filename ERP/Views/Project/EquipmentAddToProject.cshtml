
@{
    ViewBag.Title = "EquipmentToProjectTest";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div ng-app="TestApp" ng-controller="AppCtrl" class="main-content form-horizontal" role="form">


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Add Equipments To Previous Project</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <br />
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-2">
                            <label class="control-label">Select Project</label>
                        </div>
                        <div class="col-md-4">
                            <select id="Select_Project" class="form-control">
                                <option value="default" selected>Select Project</option>
                                <option ng-repeat="project in projects" value="{{project.Id}}">{{project.Name}}</option>
                            </select>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <br />
                    <div class="row">

                        <div class="col-md-3"></div>
                        <div class="col-md-2">
                            <label class="control-label">Select Date</label>
                        </div>
                        <div class="col-md-4">
                            <input ng-model="date" class="form-control" ng-model-options="{timezone:'UTC'}" type="date" />
                        </div>

                        <div class="col-md-3"></div>
                    </div>
                    <br />
                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Add Equipments</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">

                                <label class="col-md-4 control-label">Select Equipment</label>
                                <div class="col-md-8">
                                    <select id="Select_Equipment" class="form-control">
                                        <option value="default" selected>Select Equipment</option>
                                        <option ng-repeat="equipment in equipments" value="{{equipment.Id}}">{{equipment.Name}}</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">


                                <label class="col-md-4 control-label">Equipment Type</label>
                                <div class="col-md-8">
                                    <select id="Select_EquipmentType" class="form-control">
                                        <option value="default" selected>Select Type</option>
                                        <option ng-repeat="equipmentType in equipmentTypes" value="{{equipmentType.Id}}">{{equipmentType.Type}}</option>
                                    </select>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">


                                <label class="col-md-4 control-label">Quantity</label>
                                <div class="col-md-8">
                                    <input id="textbox" ng-model="quantity" class="form-control" />
                                </div>

                            </div>
                        </div>

                    </div>
                    <br />
                    <div style="text-align:center">
                        <button id="MyBtn" ng-click="sendData()" type="submit" class="btn btn-primary">Add Equipment Record</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>

    var AppMode = angular.module("TestApp", []);


    AppMode.controller("AppCtrl", function ($scope, $http) {
        
        $http({
            url: 'http://localhost:64751/api/EquipmentAddToProject',
            method: 'GET'

        }).then(function (resp) {
            var Data = resp.data;
            $scope.projects = Data.Projects;
            $scope.equipments = Data.Equipments;
            $scope.equipmentTypes = Data.EquipmentTypes;

        });

        $scope.sendData = function () {
            $http({
                url: 'http://localhost:64751/api/EquipmentAddToProject/Add',
                method: 'POST',
                data: {
                    ProjectId: $("#Select_Project").val(),
                    EquipmentId: $("#Select_Equipment").val(),
                    EquipmentTypeId: $("#Select_EquipmentType").val(),
                    Quantity: $scope.quantity,
                    Date: $scope.date,
                    IsFirstTime: false

                }

            }).then(function () {

                toastr.success("Equipment Entered Succeccfully");
                $("#Select_EquipmentType").val('default');
                $("#Select_Equipment").val('default');
                $("#textbox").val('');

                }, function () {
                    toastr.error("Equipment Not Added Please Check Your Available Stock. -ThankYou");
                    
                });

        };
        

    });

</script>

