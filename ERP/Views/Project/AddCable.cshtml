
@{
    ViewBag.Title = "CableToProjectTest";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div ng-app="TestApp" ng-controller="AppCtrl" class="main-content form-horizontal" role="form">

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Add Cable To Previous Project</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <br />
                    <div class="row4saperator">
                        <div class="row">
                            <label class="label4seperator">Add Cable</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="textbox-margintop">


                            <div class="col-md-6">
                                <label class="col-md-4 control-label">Select Cable</label>
                                <div class="col-md-8">
                                    <select id="Select_Cable" class="form-control">
                                        <option value="default" selected>Select Cable</option>
                                        <option ng-repeat="cable in cables" value="{{cable.Id}}">{{cable.Brand}}</option>
                                    </select>
                                </div>
                            </div>


                            <div class="col-md-6">


                                <label class="col-md-4 control-label">Total Feets Used</label>
                                <div class="col-md-8">
                                    <input id="textbox" ng-model="usedFeets" class="form-control" />
                                </div>

                            </div>
                        </div>

                    </div>
                    <br />

                    <div style="text-align:center">
                        <button id="MyBtn" ng-click="sendData()" type="submit" class="btn btn-primary">Add Equipment Record</button>
                    </div>
                    <br />

                    <div style="text-align:right">
                        <label id="MyBtn" ng-click="next()" class="btn btn-primary">Next</label>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<script>

    var AppMode = angular.module("TestApp", []);


    AppMode.controller("AppCtrl", function ($scope, $http) {



        $scope.ProId = location.pathname.split("/").pop();


        $http({
            url: 'http://localhost:64751/api/GetDate/' + $scope.ProId,
            method: 'GET'

        }).then(function (resp) {
            $scope.ProDate = resp.data;

        });

        $http({
            url: 'http://localhost:64751/api/CableAddToProject',
            method: 'GET'

        }).then(function (resp) {
            var Data = resp.data;
            $scope.projects = Data.Projects;
            $scope.cables = Data.Cables;

        });

        $scope.sendData = function () {
            $http({
                url: 'http://localhost:64751/api/CableAddToProject/Add',
                method: 'POST',
                data: {
                    ProjectId: $scope.ProId,
                    CableRollId: $("#Select_Cable").val(),
                    Totalfeets: $scope.usedFeets,
                    Date: $scope.ProDate,
                    IsFirstTime: true

                }

            }).then(function () {

                toastr.success("Cable Entered To Project Succeccfully");
                $("#Select_Cable").val('default');
                $("#textbox").val('');
                }, function () {
                    toastr.error("Cable Not Added Please Check Your Available Stock. -ThankYou");

                });

        };
        $scope.next = function () {

            window.location.href = '/project/AddService/' + $scope.ProId;

        };

    });

</script>




